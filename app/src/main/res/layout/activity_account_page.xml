<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.accountPage.AccountPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/accountTopBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_700">

            <EditText
                android:id="@+id/accountName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:focusable="false"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Account Name"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/unlockedImage"
                android:layout_width="27dp"
                android:layout_height="33dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="5dp"
                android:adjustViewBounds="false"
                android:visibility="invisible"
                app:srcCompat="@drawable/unlocked" />

            <ImageView
                android:id="@+id/lockedImage"
                android:layout_width="27dp"
                android:layout_height="33dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="5dp"
                android:adjustViewBounds="false"
                android:visibility="invisible"
                app:srcCompat="@drawable/locked" />
        </FrameLayout>

        <TextView
            android:id="@+id/accountNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="Account Number"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="40dp"
            android:background="@color/teal_700"
            android:text="Balance"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sortCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:text="Sort Code"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/buttonBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/lockButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.5"
                android:backgroundTint="@color/teal_700"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="11sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/shareDetailsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.5"
                android:backgroundTint="@color/teal_700"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/shareDetailsButton"
                android:textSize="11sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/transactionsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/transactions"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/transactionsDivider"
            style="@style/Divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"></View>

        <ScrollView
            android:id="@+id/transactionsScrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:id="@+id/accountTransactionsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>